<AnchorPane id="AnchorPane" fx:id="rootPane" minHeight="440.0" minWidth="640.0" prefHeight="440.0" prefWidth="640.0" stylesheets="@Project.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.farmingdale.csc325_groupproject.MainDisplayController">
   <children>
      <Label layoutX="247.0" layoutY="52.0" text="Crimal Records Management" />
      <ListView fx:id="criminalNames" layoutX="83.0" layoutY="113.0" onMouseClicked="#editCriminal" prefHeight="200.0" prefWidth="200.0" />
      <ListView fx:id="complaintDesc" layoutX="357.0" layoutY="113.0" onMouseClicked="#editComplaint" prefHeight="200.0" prefWidth="200.0" />
      <ToggleButton fx:id="permissions" layoutX="493.0" layoutY="48.0" mnemonicParsing="false" onAction="#testAdminOrViewer" text="ViewOnly" />
      <ChoiceBox fx:id="locations" layoutX="74.0" layoutY="48.0" onContextMenuRequested="#setListView" prefWidth="150.0" />
      <MenuBar layoutX="209.0" layoutY="12.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <menus>
            <Menu mnemonicParsing="false" text="Profile">
               <items>
                  <MenuItem fx:id="userName" mnemonicParsing="false" text="Name">
                     <graphic>
                        <ImageView fx:id="profilePicture" fitHeight="50.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" text="Log Out" />
                  <MenuItem mnemonicParsing="false" onAction="#settings" text="Settings" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <HBox alignment="CENTER" layoutX="83.0" layoutY="341.0" prefHeight="53.0" prefWidth="474.0">
         <children>
            <Button mnemonicParsing="false" onAction="#switchToMenu" text="Back to Menu">
               <HBox.margin>
                  <Insets right="8.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="addCriminal" mnemonicParsing="false" onAction="#newCriminal" text="Add New Criminal">
               <HBox.margin>
                  <Insets left="8.0" right="8.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="addCrime" mnemonicParsing="false" onAction="#newComplaint" text="Add Complaint">
               <HBox.margin>
                  <Insets left="8.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
